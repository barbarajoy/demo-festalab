<%= form_with(model: user, html: { style: 'width: 40%; margin: 0 auto;' }) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block", class: "label-form" %>
    <%= form.text_field :name, class: "form-control rounded-pill no-outline" %>
  </div>

  <div>
    <%= form.label :email, style: "display: block", class: "label-form" %>
    <%= form.text_field :email, class: "form-control rounded-pill no-outline" %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block", class: "label-form" %>
    <%= form.text_field :phone, id: "phone", class: "form-control rounded-pill no-outline" %>
  </div>

  <div>
    <%= form.label :cpf, style: "display: block", class: "label-form" %>
    <%= form.text_field :cpf, class: "form-control rounded-pill no-outline" %>
  </div>

  <div class="mt-3">
    <%= form.submit class: "button-purple w-100" %>
  </div>
<% end %>
